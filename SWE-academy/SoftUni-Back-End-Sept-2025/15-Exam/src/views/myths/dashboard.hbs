   <main class="dashboard">
    <section id="dashboard">
        <h2>Myths and Legends</h2>
        {{#if myths}}
        <ul class="card-wrapper">
        {{#each myths}}
            <!-- Display a li with information about every post (if any)-->
            <li class="card">
                <img src="{{imageUrl}}"/>
                <p>
                    <strong>Name: </strong><span class="name">{{name}}</span>
                </p>
                <p>
                    <strong>Origin: </strong><span class="origin">{{origin}}</span>
                </p>
                <p>
                    <strong>Role: </strong><span class="role">{{role}}</span>
                </p>
                <a class="details-btn" href="/myths/{{id}}/details">Details</a>
            </li>
        {{/each}}
        {{else}}
        <!-- Display an h2 if there are no posts -->
        <div id="no-post">
            <h2>There are no myths and legends! </h2>
        </div>
        </ul>
        {{/if}}
    </section>
</main>